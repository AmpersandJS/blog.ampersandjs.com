/*--------------------------------------------------------------------
*
* VARIABLES
*
--------------------------------------------------------------------*/

//- Font Families

$font-gotham = 'Gotham Rounded A', 'Gotham Rounded B', Helvetica, Arial, sans-serif
$font-sentinel = 'Sentinel SSm A', 'Sentinel SSm B', Georgia, Times, "Times New Roman", serif
$font-monospaced = Menlo, Monaco, Consolas, monospace

//- Font Sizes

$font-base = 1rem
$font-large = 1.125rem
$font-small = .875rem
$font-smaller = .625rem

//- Header Sizes

$font-size-h1 = 2.5rem
$font-size-h2 = 2.125rem
$font-size-h3 = 1.5rem
$font-size-h4 = 1.25rem
$font-size-h5 = 1rem

//- Font Weights

$font-weight-bold = 800

//- Line Heights

$line-height-base = 1.6
$line-height-headings = 1.3

//- Responsive breakpoints
$smartphone = '(max-width: 480px)'
$tablet = '(min-width: 481px) and (max-width: 1023px)'
$mobile-devices = '(max-width: 1023px)'
$desktop = '(min-width: 1024px)'
$desktop-wide = '(min-width: 1200px)'