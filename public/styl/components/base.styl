/*--------------------------------------------------------------------
*
* BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: $font-base/$line-height-base $font-sentinel
  color: $gray-dark
  background-color: white
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

p
  margin: 20px 0

h1, h2
  line-height: 1.1

h3, h4
  line-height: 1.3

h1, h2, h3, h4, h5
  color: black
  font-family: $font-gotham

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4 
  font-size: $font-size-h4

h5
  font-size: $font-size-h5
  text-transform: uppercase
  color: $gray

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover 
    color: darken($blue, 20%)

hr
  width: 100%
  border: none
  height: 1px
  background-color: $gray-lighter

blockquote
  margin: 40px 0
  padding: 0 20px 20px 20px
  position: relative
  color: black
  font-size: $font-large
  font-style: italic

  &:after
    content: ''
    position: absolute
    top: 100%
    left: 50%
    margin-left: -50px
    width: 100px
    height: 1px
    background-color: $gray-lighter
    
ul, ol
  margin: 15px 0 15px 20px
  padding: 0

  li ul
    li
      list-style-type: circle 

  li li ul
    li
      list-style-type: square

ul
  li
    list-style-type: disc

  &.unstyled
    margin: 0

    li
      display: inline-block
      list-style-type: none

ol
  li
    list-style-type: decimal

dl
  dt
    font-weight: $font-weight-bold
  dd
    margin: 0

.section-centered
  text-align: center

.wrapper
  margin: 0 auto

@media $mobile-devices
  .wrapper
    width: 90%

  h1
    margin: 30px 0 0 0

@media $desktop
  .wrapper
    width: 75%

  .page-blog
    
    .content, aside
      float: left
    
    .content
      width: 65%
      padding-right: 40px

    aside
      width: 35%
      padding-left: 40px

  h1
    margin: 60px 0 40px 0

@media $desktop-wide
  .wrapper
    width: 65%