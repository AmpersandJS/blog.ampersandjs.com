* PRODUCTS
*
--------------------------------------------------------------------*/

aside
  
  section
    margin-bottom: 20px
    border-bottom: 1px solid $gray-lighter

    &:last-of-type
      margin-bottom: 60px
      border: none

  .button
    width: 100%

    &.button-secondary
      margin-bottom: 5px

    &.button-primary
      margin-bottom: 20px

.product-logo
  display: block
  margin-bottom: 20px
  width: 100%
  background-repeat: no-repeat
  background-size: contain
  background-position: center center

  &:hover
    opacity: .7

  &.product-humanjs
    min-height: 120px
    background-image: url('/img/human-javascript.png')

  &.product-andbang
    min-height: 50px
    background-image: url('data:image/svg+xml;base64,')

  &.product-talky
    min-height: 70px
    background-image: url('data:image/svg+xml;base64,')

@media $mobile-devices

  aside
    section:last-of-type
      margin: 0
      border-bottom: 1px solid $gray-lighter
