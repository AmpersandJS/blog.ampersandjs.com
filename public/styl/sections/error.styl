/*--------------------------------------------------------------------
*
* ERROR PAGE (404)
*
--------------------------------------------------------------------*/

.page-error

  h1
    margin: 0
    font-size: 5rem

  p
    margin-top: 0
    font-size: $font-large

@media $desktop

  .page-error

    img
      max-width: 500px

@media $tablet

  .page-error

    img
      max-width: 400px

@media $smartphone

  .page-error
    
    figure
      margin: 0

    img
      width: 100%